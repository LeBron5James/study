<!--pages/center/center.wxml-->
<view class="userInfo">
  <image src="{{userInfo.avatarUrl}}" bindtap="handleTap"/>
  <view>{{userInfo.nickName}}</view>
</view>

<mp-cells ext-class="my-cells" >
    <mp-cell value="完善信息" >
      <mp-icon icon="me" color="#14c145" size="{{25}}" slot="icon"></mp-icon>
      <mp-icon icon="arrow" color="black" size="{{10}}" slot="footer"></mp-icon>
    </mp-cell>
    <mp-cell value="个性设置" >
      <mp-icon icon="like" color="#14c145" size="{{25}}" slot="icon"></mp-icon>
      <mp-icon icon="arrow" color="black" size="{{10}}" slot="footer"></mp-icon>
    </mp-cell>
</mp-cells>